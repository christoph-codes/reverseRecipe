{
    "title": "recipe",
    "bsonType": "object",
    "description": "Object representing a recipe.",
    "required": [
        "_id",
        "name",
        "recipeDescription",
        "ingredients",
        "category"
    ],
    "properties": {
        "_id": {
            "bsonType": "objectId",
            "title": "recipe id"
        },
        "name": {
            "bsonType": "string",
            "title": "recipe name"
        },
        "recipeDescription": {
            "bsonType": "string",
            "maxLength": 1000,
            "title": "recipe description"
        },
        "cookTime": {
            "bsonType": "int",
            "title": "recipe cook time"
        },
        "ingredients": {
            "bsonType": "array",
            "uniqueItems": true,
            "items": {"bsonType": "objectId"},
            "description": "[objectId] - An array of ID's listing all ingredients in this recipe.",
            "title": "ingredients"
        },
        "instructions": {
            "bsonType": "string",
            "title": "recipe instructions"
        },
        "measurements": {
            "bsonType": "array",
            "items": {"bsonType": "string"},
            "description": "[string] - An array of measurements where each item corresponds to an ingredient.",
            "title": "recipe ingredient measurements"
        },
        "category": {
            "bsonType": "string",
            "description": "string - The category of this recipe (i.e. American, Thai, French, etc).",
            "title": "recipe category",
            "enum": [
                "American",
                "French",
                "Italian",
                "Thai",
                "Spanish",
                "Mediterranean",
                "Greek",
                "Indian",
                "Other",
                null
            ]
        }
    }
}