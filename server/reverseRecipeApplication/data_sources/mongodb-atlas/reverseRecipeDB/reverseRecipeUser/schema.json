        },
        "first": {
            "bsonType": "string",
            "title": "user first name"
        },
        "last": {
            "bsonType": "string",
            "title": "user last name"
        },
        "savedRecipes": {
            "bsonType": "array",
            "items": {"bsonType": "objectId"},
            "description": "[objectId] - An array of reference id's for this users saved recipes.",
            "title": "user saved recipes"
        },
        "role": {
            "bsonType": "string",
            "description": "string - describes this users permissions by role.",
            "enum": [
                "USER",
                "ADMIN"
            ],
            "title": "user role"
        }
    },
    "required": [
        "_id",
        "first",
        "last",
        "email",
        "role"
    ],
    "title": "user"
}

